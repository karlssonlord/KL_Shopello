<config>
  <sections>
    <shopello translate="label" module="feedeo">
      <label>Shopello</label>
      <tab>catalog</tab>
      <frontend_type>text</frontend_type>
      <sort_order>2000</sort_order>
      <show_in_default>1</show_in_default>
      <show_in_website>1</show_in_website>
      <show_in_store>1</show_in_store>
      <groups>
        <general translate="label">
          <label>General</label>
          <frontend_type>text</frontend_type>
          <sort_order>10</sort_order>
          <expanded>1</expanded>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <fields>
            <secret_key>
              <label>Secret key</label>
              <frontend_type>text</frontend_type>
              <comment>
                <![CDATA[http://www.example.com/shopello/products?secret_key=<strong>SECRETKEY</strong>]]>
              </comment>
              <sort_order>10</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>0</show_in_website>
              <show_in_store>0</show_in_store>
            </secret_key>
              <delivery_time>
                <label>Delivery Time</label>
                <frontend_type>text</frontend_type>
                <comment>
                    <![CDATA[free text, f.e. "1-3 days, but during holidays 2-5 days"]]>
                </comment>
                <sort_order>20</sort_order>
                <show_in_default>1</show_in_default>
                <show_in_website>1</show_in_website>
                <show_in_store>1</show_in_store>
              </delivery_time>
          </fields>
        </general>
      </groups>
    </shopello>
  </sections>
</config>
